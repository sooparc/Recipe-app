<% layout('layout/boilerplate')%>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get recipe</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="text-center my-4">
    
      <% for (let recipe of recipes) {%>
        <div class="row my-5">
            <div class="col-lg-6 offset-lg-3 col-md-6 offset-md-3 col-sm-6 offset-sm-3">
              <div class="card shadow-lg">
                <div class="text-center mt-5">
                <img src=<%=recipe.image%> class="card-img-top rounded-circle img-thumbnail" alt="..." style="width: 50%; height: 50%; border-radius: 50%">
              </div>
                <div class="card-body p-5">
                <div class="card-title mb-4">
                  <h2 class="card-title"><%=recipe.name%></h2>
                  <h5 class="text-muted">- <%=recipe.area%> cuisine -</h5>
                </div>
                <div class="card-body">
                  <h4 class="card-title mb-5">Ingredients</h4>
                  <p class="card-text"> 

                    <% for (let i = 0; i < recipe.ingredients.length; i ++) {%>
                    <ul>
                      <li>
                        <%=recipe.measures[i]%> / <%=recipe.ingredients[i]%></li>
                    </ul>
                    <% } %> 
                  </p>
                </div>
               </div>
                <div class="card-footer">
                  <small class="text-muted"><strong>How to make:</strong> <%=recipe.instruction%></small>
                </div>
              </div>

              <!-- <button type="submit" class="btn btn-outline-danger p-3 mt-5">Leave a review</button> -->

            </div>
      <% } %>

      

    </div>
  </body>
</html>
